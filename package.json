{
  "name": "mcp-workflowy-remote",
  "version": "2.0.0",
  "description": "MCP server that lets agents talk to Workflowy",
  "bin": {
    "mcp-workflowy-remote": "dist/index.js"
  },
  "type": "module",
  "module": "./src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir dist --target node && shx chmod +x dist/index.js",
    "build:worker": "bun build ./src/worker.ts --outdir dist --target browser --format esm",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test src/test/workflowy-tools-simple.test.ts",
    "test:integration": "bun test src/test/integration-basic.test.ts",
    "prepack": "npm run build",
    "start": "node dist/index.js",
    "postbuild": "chmod +x dist/index.js",
    "deploy": "wrangler deploy",
    "deploy:preview": "wrangler deploy --env preview",
    "dev:worker": "wrangler dev",
    "dev:preview": "wrangler dev --env preview",
    "dry-run": "bash scripts/dry-run-deploy.sh"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": "github:dseeker/mcp-workflowy-remote",
  "license": "MIT",
  "keywords": [
    "mcp",
    "workflowy",
    "agent",
    "cli"
  ],
  "bugs": {
    "url": "https://github.com/dseeker/mcp-workflowy-remote/issues"
  },
  "homepage": "https://github.com/dseeker/mcp-workflowy-remote#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/bun": "1.2.16",
    "@types/node": "^22.15.3",
    "@types/winston": "^2.4.4",
    "bun": "^1.2.11",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "nodemon": "^3.1.10",
    "semantic-release": "^22.0.12",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "wrangler": "^4.33.1"
  },
  "dependencies": {
    "@cloudflare/workers-oauth-provider": "^0.0.8",
    "@modelcontextprotocol/sdk": "^1.11.0",
    "@valibot/to-json-schema": "^1.0.0",
    "dotenv": "^16.5.0",
    "effect": "^3.14.18",
    "fastmcp": "^1.23.2",
    "winston": "^3.17.0",
    "workflowy": "^2.8.1"
  },
  "overrides": {
    "cross-spawn": ">=7.0.5",
    "brace-expansion": ">=2.0.0"
  }
}
