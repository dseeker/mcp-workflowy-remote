{
  "branches": [
    "main",
    "master"
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "docs", "release": "patch" },
          { "type": "style", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "test", "release": "patch" },
          { "type": "chore", "release": "patch" },
          { "type": "ci", "release": "patch" },
          { "type": "build", "release": "patch" },
          { "type": "revert", "release": "patch" },
          { "breaking": true, "release": "major" },
          { "scope": "BREAKING", "release": "major" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "ðŸš€ Features" },
            { "type": "fix", "section": "ðŸ› Bug Fixes" },
            { "type": "perf", "section": "âš¡ Performance Improvements" },
            { "type": "docs", "section": "ðŸ“š Documentation" },
            { "type": "style", "section": "ðŸ’Ž Styles" },
            { "type": "refactor", "section": "ðŸ“¦ Code Refactoring" },
            { "type": "test", "section": "ðŸš¨ Tests" },
            { "type": "build", "section": "ðŸ›  Builds" },
            { "type": "ci", "section": "âš™ï¸ Continuous Integrations" },
            { "type": "chore", "section": "â™»ï¸ Chores" },
            { "type": "revert", "section": "ðŸ—‘ Reverts" },
            { "type": "security", "section": "ðŸ”’ Security" }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "npm run build && npm run build:worker",
        "publishCmd": "echo 'Version ${nextRelease.version} prepared for deployment'"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md",
          "dist/**"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/worker.js",
            "label": "Cloudflare Worker Bundle (${nextRelease.gitTag})"
          },
          {
            "path": "dist/index.js", 
            "label": "Local Server Binary (${nextRelease.gitTag})"
          }
        ],
        "addReleases": "bottom",
        "successComment": "ðŸŽ‰ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version [${nextRelease.version}](${releases.filter(release => !!release.name)[0].url}) ðŸŽ‰",
        "failComment": "âŒ The release from branch `${branch.name}` had failed due to the following errors:\n- ${errors.map(err => err.message).join('\\n- ')}",
        "labels": ["released"],
        "releasedLabels": ["released<%= nextRelease.version %>"]
      }
    ]
  ]
}